<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:context="com.example.dam.serflix.Controller.Activities.RecommendationActivity">

    <com.huxq17.swipecardsview.SwipeCardsView
        android:id="@+id/swipeCardsView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="?android:attr/windowBackground"
        app:alphaOffsetStep="20"
        app:scaleOffsetStep="0.08"
        app:yOffsetStep="20dp"></com.huxq17.swipecardsview.SwipeCardsView>

    <ImageButton
        android:id="@+id/dislikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/swipeCardsView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/swipeCardsView"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="70dp"
        android:background="@null"
        app:srcCompat="@drawable/dislike" />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/swipeCardsView"
        android:layout_alignRight="@+id/swipeCardsView"
        android:layout_alignTop="@+id/dislikeButton"
        android:layout_marginRight="70dp"
        android:background="@null"
        app:srcCompat="@drawable/like" />

</RelativeLayout>