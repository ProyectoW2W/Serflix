<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.Activities.SignUpActivity">

    <TextView
        android:text="Serflix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_name"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textSize="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="36dp"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_alignRight="@+id/editText5"
        android:layout_alignEnd="@+id/editText5" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/editName"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="19dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/editPass"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="21dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/editPasswordCheck"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="19dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/editEmail"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />
</RelativeLayout>
