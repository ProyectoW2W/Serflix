<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Controller.Activities.RequestActivity">

    <TextView
        android:text="@string/textCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textCompany"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/dish_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_btn"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textCompany"
        android:layout_centerHorizontal="true"
        style="@style/company_btn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="117dp">

        <TextView
            android:text="@string/textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textDate"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            android:layout_below="@+id/textCompany"
            android:layout_alignRight="@+id/textCompany"
            android:layout_alignEnd="@+id/textCompany"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="00/00/0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgBtnDate"
            android:layout_toRightOf="@+id/textCompany"
            android:layout_toEndOf="@+id/textCompany"
            android:id="@+id/dateTextPicker"
            android:textAlignment="center"
            android:textSize="45sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="@string/textTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textTime"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            android:layout_below="@+id/imgBtnDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />

        <TextView
            android:text="00:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgBtnDate"
            android:layout_toRightOf="@+id/textCompany"
            android:layout_toEndOf="@+id/textCompany"
            android:id="@+id/hourTextPicker"
            android:textAlignment="center"
            android:textSize="45sp" />

    </LinearLayout>

</RelativeLayout>
